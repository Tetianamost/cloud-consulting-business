# Server Configuration
PORT=8080
LOG_LEVEL=4
GIN_MODE=release

# Database Configuration
DATABASE_URL=postgres://postgres:password@localhost:5432/consulting?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_NAME=consulting
DB_USER=postgres
DB_PASSWORD=password
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=
S3_BUCKET_NAME=cloud-consulting-reports
S3_REGION=us-east-1
SQS_QUEUE_URL=
SQS_REGION=us-east-1

# External Services
LLM_SERVICE_URL=https://api.openai.com/v1
LLM_SERVICE_API_KEY=
LLM_SERVICE_MODEL=gpt-4
LLM_SERVICE_TIMEOUT=30
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.7

# Notification Services
EMAIL_SERVICE_URL=
EMAIL_SERVICE_API_KEY=
EMAIL_SERVICE_TIMEOUT=10
SLACK_WEBHOOK_URL=
SLACK_TIMEOUT=10
NOTIFICATION_RETRY_ATTEMPTS=3

# Security
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRATION=3600
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200
API_KEY_HEADER=X-API-Key
API_KEY=

# Feature Flags
ENABLE_AGENT_HOOKS=true
ENABLE_NOTIFICATIONS=true
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_RATE_LIMITING=true
ENABLE_AUTHENTICATION=false

# Monitoring & Observability
METRICS_PORT=9090
METRICS_PATH=/metrics
HEALTH_CHECK_INTERVAL=30
TRACE_SAMPLING_RATE=0.1
LOG_FORMAT=json

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60
CIRCUIT_BREAKER_MAX_REQUESTS=3

# Cache
CACHE_TTL=3600
CACHE_CLEANUP_INTERVAL=600